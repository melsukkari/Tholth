    },
    {
      "type": "boolean",
      "id": "enable_overlay_navigation",
      "label": "تفعيل التصفح باللوحة التفاعلية",
      "format": "switch",
      "required": false,
      "value": true,
      "selected": true
    },
    {
      "type": "number",
      "id": "overlay_width",
      "label": "عرض اللوحة (%)",
      "format": "range",
      "min": 70,
      "max": 95,
      "step": 5,
      "value": 90
    },
    {
      "type": "number",
      "id": "overlay_height",
      "label": "ارتفاع اللوحة (%)",
      "format": "range",
      "min": 70,
      "max": 95,
      "step": 5,
      "value": 90
    }
