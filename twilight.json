    },
    {
      "type": "color",
      "id": "text_color",
      "label": "لون النص",
      "format": "picker",
      "value": "#E0E0E0"
    },
    {
      "type": "static",
      "format": "title",
      "id": "winter-effects-header",
      "value": "❄️ تأثيرات الشتاء",
      "variant": "h6"
    },
    {
      "type": "boolean",
      "id": "enable_snow",
      "label": "تفعيل تساقط الثلج",
      "format": "switch",
      "required": false,
      "value": true,
      "selected": true
