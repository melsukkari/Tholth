{
  "name": "tholth-winter-theme",
  "version": "1.0.0",
  "description": "Premium Salla winter theme with snowfall effects and AJAX overlays",
  "main": "index.js",
  "scripts": {
    "dev": "salla theme watch",
    "watch": "salla theme watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/assets/styles/app.css -o dist/app.css",
    "build:js": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "preview": "salla theme preview",
    "publish": "salla theme publish",
    "lint": "eslint src/assets/js/**/*.js",
    "lint:fix": "eslint src/assets/js/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,json,twig}\"",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "salla",
    "theme",
    "winter",
    "ecommerce",
    "rtl",
    "arabic",
    "snowfall",
    "ajax",
    "overlay"
  ],
  "author": "Mohammed Al-Sugari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/melsukkari/Tholth.git"
  },
  "bugs": {
    "url": "https://github.com/melsukkari/Tholth/issues"
  },
  "homepage": "https://github.com/melsukkari/Tholth#readme",
  "dependencies": {},
  "devDependencies": {
    "@salla.sa/cli": "^2.0.0",
    "autoprefixer": "^10.4.16",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-rtl": "^2.0.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.6",
    "webpack": "^5.89.0",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "> 0.5%",
    "last 2 versions"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "Salla": "readonly",
      "TholthOverlay": "writable"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "tailwindcss/nesting": "postcss-nested",
      "tailwindcss": {},
      "postcss-rtl": {},
      "autoprefixer": {}
    }
  }
}
